<UserControl x:Class="ProyectoWPF.Components.ListaArchivos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoWPF.Components.Online"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10px"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10px"/>
            <RowDefinition Height="0.01*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="title" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="1" FontSize="32" Foreground="White" FontWeight="Bold" Margin="10,0,0,0"/>
        <Rectangle Margin="18,0,20,0" Fill="White" Grid.Row="3" />
        <ScrollViewer Grid.Row="5" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Hidden" Margin="18,0,20,0" VerticalContentAlignment="Stretch" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <StackPanel x:Name="stackLista" Orientation="Horizontal">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
