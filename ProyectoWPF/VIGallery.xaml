<Window x:Class="ProyectoWPF.VIGallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoWPF"
        mc:Ignorable="d"
        Title="VI-Gallery" Width="1920" Height="1080" MinWidth="700" MinHeight="700" WindowStartupLocation="CenterScreen" Background="{x:Null}" WindowState="Maximized" WindowStyle="None">
    <Grid>
        
        <DockPanel Background="#FF121212">
            <Grid Height="28" DockPanel.Dock="Top" VerticalAlignment="Top" Background="#FF121212">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.045*"/>
                    <ColumnDefinition Width="0.045*"/>
                    <ColumnDefinition Width="0.045*"/>
                </Grid.ColumnDefinitions>
                <Button Content="_" Style="{StaticResource CustomButtonStyle}" Grid.Column="1" Padding="0" Foreground="White" FontWeight="ExtraBlack" BorderThickness="0" Click="MinimizeApp" />
                <Button Content="[ ]" Style="{StaticResource CustomButtonStyle}" Grid.Column="2" Padding="0" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="MaximizeApp"/>
                <Button Content="X" Style="{StaticResource ButtonClose}" Grid.Column="3" Padding="0" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="CerrarApp"/>
            </Grid>
            <Grid>
                <DockPanel>
                    <Grid Width="280" HorizontalAlignment="Left" Background="#FF121212">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.3*"/>
                            <RowDefinition Height="*"/>

                            <RowDefinition Height="0.05*"/>
                            <RowDefinition Height="0.25*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150px"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="150px"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Content="Options" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="showOptions"/>

                        </Grid>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                            <StackPanel x:Name="buttonStack" CanVerticallyScroll="True" >
                                
                            </StackPanel>
                        </ScrollViewer>
                        <Border x:Name="menuButtons" BorderThickness="0" BorderBrush="Red" Grid.Row="2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Grid>
                                <StackPanel x:Name="addButtonStack" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="+" Style="{StaticResource CustomButtonStyle}" Foreground="White" Margin="0,-2.5,0,0" FontSize="20" BorderThickness="0" Width="50" Click="addButtonClick" FontWeight="Bold"/>
                                    <Button Content="-" Style="{StaticResource CustomButtonStyle}" Foreground="White" Margin="0,-2.5,0,0" FontSize="30" BorderThickness="0" Width="50" Click="removeButtonClick"/>

                                </StackPanel>
                            </Grid>
                        </Border>

                        <GridSplitter Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="2" Background="#FF343434" Visibility="Hidden"/>
                        <GridSplitter Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="2" Background="#FF343434" Visibility="Hidden"/>
                        <GridSplitter Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="2" Background="#FF343434" Visibility="Hidden"/>
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.7*" />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="Return" Content="Button" HorizontalAlignment="Right" Grid.Column="2" VerticalAlignment="Bottom" Width="75" Height="75" Click="Return_MouseLeftButtonUp" Visibility="Hidden"/>
                        </Grid>

                    </Grid>
                    <Border CornerRadius="10,0,0,0" Background="#202020" Margin="0">
                        <Grid DockPanel.Dock="Top" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Height="30" VerticalAlignment="Top" Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="0*"/>
                                </Grid.RowDefinitions>
                                <Grid x:Name="GridPrincipal" Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.8*"/>
                                        <ColumnDefinition Width="0.075*"/>
                                        <ColumnDefinition Width="0.25*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" ScrollViewer.VerticalScrollBarVisibility="Disabled" FlowDirection="RightToLeft" >
                                        <Button Content="Button" Style="{StaticResource CustomButtonStyle}"  BorderThickness="0" Foreground="White" Margin="2"/>
                                        <Button Content="Button" Style="{StaticResource CustomButtonStyle}" Padding="1" BorderThickness="0" Foreground="White" Margin="2" Click="ChangeMode"/>
                                        <Viewbox Width="30" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
                                            <Button Content="{StaticResource multiFolder}" Style="{StaticResource ImageButtonStyle}" BorderThickness="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Click="Button_MouseLeftButtonUp" Margin="100"/>
                                        </Viewbox>
                                        <!--<Button Content="{StaticResource multiFolder}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="1" BorderThickness="0" Background="{x:Null}" Foreground="White" Click="Button_MouseLeftButtonUp"/>-->
                                        <Viewbox Width="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Button x:Name="addButton" Content="{StaticResource Folder}" Style="{StaticResource CustomButtonStyle}" BorderThickness="0" Foreground="White" Click="Button_AddCarpeta" Margin="20"/>
                                        </Viewbox>
                                    </StackPanel>
                                    <TextBox MaxLines="1" VerticalAlignment="Center" Margin="10,0" Padding="5,0,0,0"/>
                                </Grid>

                                <Grid x:Name="GridSecundario" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.8*"/>
                                        <ColumnDefinition Width="0.075*"/>
                                        <ColumnDefinition Width="0.25*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" ScrollViewer.VerticalScrollBarVisibility="Disabled" FlowDirection="RightToLeft" >
                                        <Button Content="Button" Padding="1" Style="{StaticResource CustomButtonStyle}" BorderThickness="0" Foreground="White"/>
                                        <Button Content="Button" Padding="1" Style="{StaticResource CustomButtonStyle}" BorderThickness="0" Foreground="White" Click="ChangeMode"/>
                                        <Button Content="addArchivo" Padding="1" Style="{StaticResource CustomButtonStyle}" BorderThickness="0" Foreground="White"/>
                                        <Viewbox Width="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Button x:Name="addSubCarp" Content="{StaticResource Folder}" Style="{StaticResource CustomButtonStyle}" BorderThickness="0" Foreground="White" Click="NewTemp_Click" Margin="20"/>
                                        </Viewbox>
                                    </StackPanel>
                                    <TextBox MaxLines="1" VerticalAlignment="Center" Margin="10,0" Padding="5,0,0,0"/>
                                </Grid>
                            </Grid>
                            <Grid x:Name="gridPrincipal" Grid.Row="1" Background="#FF262626" />
                        </Grid>

                    </Border>
                </DockPanel>
                <Grid x:Name="optionPanel" Background="#FF121212" Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid x:Name="panelUSuario" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.3*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="#FF1D1D1D" Grid.Row="0" Grid.ColumnSpan="4" CornerRadius="20,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="100" Direction="-90" Color="Black" ShadowDepth="20" RenderingBias="Quality"/>
                                </Border.Effect>
                            </Border>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="ImgBorde" CornerRadius="15" BorderThickness="5" Width="150" Height="200" BorderBrush="White" Grid.Column="1" Grid.Row="1" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Viewbox RenderOptions.BitmapScalingMode="HighQuality">
                                        <Canvas x:Name="canvasFolder" Width="210" Height="300" RenderOptions.BitmapScalingMode="HighQuality">
                                            <Canvas.RenderTransform>
                                                <TranslateTransform X="0" Y="0"/>
                                            </Canvas.RenderTransform>
                                            <Canvas.Resources/>
                                            <!--Unknown tag: sodipodi:namedview-->
                                            <!--Unknown tag: metadata-->
                                            <Canvas Name="layer1" Height="300" Width="210">
                                                <Path x:Name="ColorPath" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" StrokeThickness="0.70697761" Stretch="Fill" Canvas.Left="7.875" Canvas.Top="5.25" Fill="White" >
                                                    <Path.Data>
                                                        <PathGeometry Figures="m 54.147296 247.46357 c 0 -61.12934 -0.668027 -103.25674 -1.637377 -103.25674 -2.262521 0 -7.8483 -4.18297 -9.732755 -7.28847 -5.806217 -9.5684 -6.112227 -13.79857 -5.234268 -72.356365 l 0.730272 -48.707356 1.800655 -4.104055 c 2.52343 -5.7513848 6.797018 -8.3171316 13.853269 -8.3171316 3.937937 0 147.802708 30.8254296 148.720278 31.8657976 0.0689 0.07803 -0.0494 52.527176 -0.26279 116.55354 l -0.38798 116.41161 -2.38454 0.40074 c -1.31149 0.22042 -34.20411 5.23624 -73.09472 11.14627 -38.8906 5.91004 -70.80977 11.01518 -70.931495 11.34477 -1.18427 3.20658 -1.438549 -4.51653 -1.438549 -43.69261 z M 19.290168 270.0789 C 14.665093 266.68887 12.09087 261.3467 11.01466 252.90503 9.5373509 241.3172 10.175238 45.665787 11.702776 41.8476 14.673513 34.422047 20.051308 29.805699 25.750627 29.788765 l 2.476787 -0.0065 0.178994 53.357561 0.178994 53.357554 2.647917 4.35872 c 1.594813 2.62525 4.525102 5.93281 7.367901 8.31649 6.596179 5.53094 6.250842 1.82651 6.250842 67.05293 v 54.45236 h -5.873508 c -3.230432 0 -8.533694 0.1939 -11.78503 0.4309 -5.12716 0.37372 -6.175804 0.23718 -7.903356 -1.02905 z" FillRule="NonZero"/>
                                                    </Path.Data>
                                                </Path>
                                            </Canvas>
                                        </Canvas>
                                    </Viewbox>
                                </Border>
                            </Grid>

                            <Label Content="nombreUsuario" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="White" FontSize="100" Grid.Column="1"/>
                        </Grid>
                        <ScrollViewer HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Background="#FF252525" Foreground="{x:Null}">
                            <StackPanel Margin="0,100,0,0">
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.3*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Nombre de Usuario" Foreground="White" FontSize="30px" HorizontalContentAlignment="Right"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="0.2*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="1" Margin="20,5,20,5"></TextBox>
                                    </Grid>
                                    
                                </Grid>
                                <Grid Margin="0,30,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.3*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Correo electrónico" Foreground="White" FontSize="30px" HorizontalContentAlignment="Right"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="0.2*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="1" Margin="20,5,20,5"></TextBox>
                                    </Grid>
                                </Grid>
                                <Grid Margin="0,30,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.3*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Imágen de perfil" Foreground="White" FontSize="30px" HorizontalContentAlignment="Right"/>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150px"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="0.2*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Foreground="White" VerticalContentAlignment="Center" Grid.Column="1"/>
                                        <Button Content="..." Width="70px" Grid.Column="2"/>
                                    </Grid>
                                </Grid>
                                <Grid Margin="10,30,10,10">
                                    <Grid Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10px"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10px"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="10px"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10px"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10px"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Elige un Perfil" FontWeight="Bold" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Grid.ColumnSpan="2" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="50"/>
                                        <Border BorderThickness="2" BorderBrush="LightGray" Grid.Row="3" Grid.Column="1" VerticalAlignment="Stretch">
                                            <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Hidden">
                                                <StackPanel x:Name="perfiles" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></StackPanel>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Grid>
                                <Grid Margin="10,30,10,10">
                                    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                        <Button Content="-" Style="{StaticResource CustomButtonStyle}" Padding="0" Width="50" FontWeight="Bold" Foreground="White" FontSize="25px" Click="removeProfile"/>
                                        <Button Content="+" Style="{StaticResource CustomButtonStyle}" Padding="0" Width="50" FontWeight="Bold" Foreground="White" FontSize="25px" Click="addProfile"/>
                                        <Button Content="Cambiar Perfil" Style="{StaticResource CustomButtonStyle}" FontWeight="Bold" Foreground="White" FontSize="25px" Click="changeProfile"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>


                    </Grid>
                    <Grid Background="#FF121212">
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                <Button Content="Usuario" Padding="10" FontSize="60px" FontWeight="Bold" HorizontalContentAlignment="Right" Foreground="White" Style="{StaticResource PropertieButton}"/>
                                <Button Content="Temas" Padding="10" FontSize="60px" FontWeight="Bold" HorizontalContentAlignment="Right" Foreground="White" Style="{StaticResource PropertieButton}"/>
                                <Button Content="Reproductor" Padding="10" FontSize="60px" FontWeight="Bold" HorizontalContentAlignment="Right" Foreground="White" Style="{StaticResource PropertieButton}"/>
                            </StackPanel>
                        </ScrollViewer>
                        <Button Content="Return"  Width="75px" Height="75px" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="showMain"/>
                    </Grid>
                </Grid>
            </Grid>
        </DockPanel>
        
    </Grid>
</Window>
