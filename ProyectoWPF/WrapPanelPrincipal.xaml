<UserControl x:Class="ProyectoWPF.WrapPanelPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Hidden" >
            <WrapPanel x:Name="wrapPanel" HorizontalAlignment="Center">
                <Rectangle Width="200" Height="100" Fill="Black" Margin="10" />
                <Rectangle Width="200" Height="100" Fill="Black" Margin="10" />
                <Rectangle Width="200" Height="100" Fill="Black" Margin="10" />
                <Rectangle Width="200" Height="100" Fill="Black" Margin="10" />
                <Rectangle Width="200" Height="100" Fill="Black" Margin="10" />
                <Rectangle Width="200" Height="100" Fill="Black" Margin="10" />
                <Rectangle Width="200" Height="100" Fill="Black" Margin="10" />
            </WrapPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
