<Window x:Class="ProyectoWPF.newSubCarpeta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoWPF"
        mc:Ignorable="d"
        Title="Crear Carpeta" Height="175" Width="570">
    <Grid Background="#FF2B2B2B">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="Nombre de la Carpeta: " HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Right" Foreground="White" FontSize="18" FontWeight="Bold" VerticalContentAlignment="Center"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,0,10,0" TextWrapping="NoWrap" Text="TextBlock" VerticalAlignment="Center" Background="White" BorderThickness="2" FontSize="18" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
